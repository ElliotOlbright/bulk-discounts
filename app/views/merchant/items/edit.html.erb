<h1>Editing Merchant Item</h1>

<%= form_with model: [ :merchant, @item ], method: :patch, local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %></br>

  <%= f.label :description %>
  <%= f.text_field :description %></br>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %></br>

  <%= f.submit %>
<% end %>

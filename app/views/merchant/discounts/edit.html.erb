<h1>Edit <%= @discount.name %></h1>
<div text-align="center" align="center">
<%= form_with model: [ :merchant, @discount ], method: :patch, local: true, :html => { :class => 'card navbar-custom card-body', :style => 'width: 18rem;' } do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :discount %>
  <%= f.text_field :discount %><br>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br>

  <%= f.submit 'Submit' %>

<% end %>
</div>
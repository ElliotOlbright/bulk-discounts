<h1><%= @discount.name %> Show Page</h1>

<div text-align="center" align="center">
  <%= link_to 'Edit This Discount', edit_merchant_discount_path(@merchant.id,@discount.id), method: :get, class:"btn btn-outline-dark navbar-custom" %>
</div>
<table class="table table-striped">
  <table class="table table-striped navbar-custom">
  <thead class="custom" text-align="center" align="center">
    <tr>
      <th  colspan="4" style="font-family: Quicksand;"><%= @discount.name %></th>
    </tr>
  </thead >
  <tbody id="discounts">
    <tr id="discount-table-headers">
      <th>Name</th>
      <th>Quantity Needed</th>
      <th>Discount Percentage</th>
    </tr>
        <td><%= "#{@discount.name}" %></td>
        <td><%= "#{@discount.quantity}" %></td>
        <td><%= "#{@discount.discount}%" %></td>
      </tr>
  </tbody>
</table>
